{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "llm",
  "title": "LLM",
  "description": "Access different LLM and pass info to other applications",
  "icon": "extension_icon2.png",
  "author": "brunnorpdias",
  "categories": [
    "Productivity",
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "form",
      "title": "Chat",
      "description": "Talk with an LLM",
      "mode": "view"
    },
    {
      "name": "saved",
      "title": "Saved",
      "description": "View all saved chats",
      "mode": "view"
    }
  ],
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "dependencies": {
    "@anthropic-ai/sdk": "latest",
    "@google/genai": "latest",
    "@raycast/api": "latest",
    "date-fns": "latest",
    "openai": "latest"
  },
  "devDependencies": {
    "@raycast/eslint-config": "latest",
    "@types/react": "latest",
    "eslint": "latest",
    "prettier": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "start": "node"
  }
}
